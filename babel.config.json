{
  "ignore": ["**/*.stories.tsx", "**/*.d.ts"],
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": ["> 1% in KR, not dead"]
        }
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": 3
      }
    ],
    "babel-plugin-styled-components",
    [
      "module-resolver",
      {
        "alias": {
          "@components": "./src/components",
          "@hooks": "./src/hooks",
          "@styles": "./src/styles",
          "@utils": "./src/utils",
          "@constants": "./src/constants"
        }
      }
    ]
  ]
}
